#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define cambien         PIN_A0
#define ledxanh  PIN_D2
#define leddo      PIN_D3
#define IN1         PIN_C0
#define IN2         PIN_C1
#define ctmo  PIN_B0
#define ctdong PIN_B1

void quaythuan() {
   output_high(IN1);
   output_low(IN2);
}

void quaynguoc() {
   output_low(IN1);
   output_high(IN2);
}

void dung() {
   output_low(IN1);
   output_low(IN2);
}

void main() {
   set_tris_a(0xFF);
   set_tris_b(0xFF);
   set_tris_c(0x00);
   set_tris_d(0x00);

   output_low(ledxanh);
   output_low(leddo);
   dung();

   while(TRUE) {
      if(input(cambien)) {
         // M? c?a n?u chua m? h?t
         if(input(ctmo)) {
            output_high(ledxanh);
            delay_ms(200); // LED xanh nh?p nháy 1 l?n
            output_high(leddo);
            quaythuan();
            output_low(ledxanh);

            while(input(ctmo)) {
               if(!input(ctmo)) break;
            }

            dung();
            output_low(leddo);
         }

         // Ch? 2s
         delay_ms(2000);

dong_cua:
         // Ðóng c?a n?u chua dóng h?t
         if(input(ctdong)) {
            output_high(leddo);
            quaynguoc();

            while(input(ctdong)) {
               if(input(cambien)) {
                  // N?u phát hi?n ngu?i thì d?ng và m? l?i
                 
                  // delay nh? tru?c khi m? l?i

                  // M? l?i c?a
                  if(input(ctmo)) {
                     output_high(ledxanh);
                     delay_ms(200);
                     output_low(ledxanh);
                     quaythuan();
                     

                     while(input(ctmo)) {
                        if(!input(ctmo)) break;
                     }

                     dung();
                     output_low(leddo);
                     output_low(ledxanh);
                  }

                  delay_ms(2000); // ch? r?i dóng l?i
                  goto dong_cua; // quay l?i dóng c?a ti?p
               }
            }

            dung();
            output_low(leddo);
         }

         output_low(ledxanh);
      }
   }
}

