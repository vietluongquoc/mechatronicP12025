#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define PIR         PIN_A0
#define LED_XANH    PIN_D2
#define LED_DO      PIN_D3
#define LIMIT_OPEN  PIN_B0
#define LIMIT_CLOSE PIN_B1

void main() {
   set_tris_a(0xFF);
   set_tris_b(0xFF);
   set_tris_d(0x00);
   port_b_pullups(TRUE); // Kích ho?t di?n tr? kéo lên n?i

   output_low(LED_XANH);
   output_low(LED_DO);

   while(TRUE) {
      if(input(PIR)) {
         output_high(LED_XANH);
         output_high(LED_DO);
      }

      if(!input(LIMIT_OPEN)) {
         output_low(LED_XANH);
      }

      if(!input(LIMIT_CLOSE)) {
         output_low(LED_DO);
      }
   }
}

