#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define SWITCH_OPEN   PIN_D4   // Công t?c m? h?t
#define SWITCH_CLOSE  PIN_D5   // Công t?c dóng h?t
#define LED_XANH      PIN_D2
#define LED_DO        PIN_D3

void main() {
   set_tris_d(0xF0); // D4 và D5 là input, D2 và D3 là output
   output_low(LED_XANH);
   output_low(LED_DO);

   while(TRUE) {
      // N?u công t?c m? h?t du?c nh?n ? b?t LED xanh
      if(input(SWITCH_OPEN))
         output_high(LED_XANH);
      else
         output_low(LED_XANH);

      // N?u công t?c dóng h?t du?c nh?n ? b?t LED d?
      if(input(SWITCH_CLOSE))
         output_high(LED_DO);
      else
         output_low(LED_DO);
   }
}

