#include <16F887.h>
#fuses INTRC_IO, NOWDT, NOPUT, NOMCLR
#use delay(clock=12000000)  // Dùng th?ch anh n?i 8MHz

void main() {
   set_tris_d(0xFE);       // RD0 output, các chân còn l?i input
   output_low(PIN_D2);     // T?t LED ban d?u

   while(true) {
      output_toggle(PIN_D0);  // Ð?o tr?ng thái LED
      delay_ms(500);          // Ch? 500ms
   }
}

