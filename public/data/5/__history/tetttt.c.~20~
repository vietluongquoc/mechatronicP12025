#include <16F887.h>
#fuses HS, NOWDT, NOLVP, NOPUT
#use delay(clock=12000000)

#define TRIG    PIN_C0
#define ECHO    PIN_C1
#define LED     PIN_D2
#define BUZZER  PIN_D3

void send_trigger() {
   output_low(TRIG);
   delay_us(2);
   output_high(TRIG);
   delay_us(10);
   output_low(TRIG);
}

unsigned int16 get_echo_time() {
   unsigned int16 time = 0;
   unsigned int16 timeout = 10000;

   // Ch? Echo lên (b?t d?u xung)
   while(!input(ECHO) && timeout > 0) {
      delay_us(1);
      timeout--;
   }
   if(timeout == 0) return 0;  // không có echo

   set_timer1(0);
   timeout = 30000;

   // Ch? Echo xu?ng (k?t thúc xung)
   while(input(ECHO) && timeout > 0) {
      delay_us(1);
      timeout--;
   }

   time = get_timer1();
   return time;
}

unsigned int16 get_distance_cm() {
   unsigned int16 duration = 0;
   float distance_cm = 0;

   send_trigger();
   duration = get_echo_time();

   if(duration == 0) return 999; // l?i d?c echo

   distance_cm = (float)duration / 58.0;

   return (unsigned int16)distance_cm;
}

void main() {
   set_tris_c(0b00000010);  // RC0 output (Trig), RC1 input (Echo)
   set_tris_d(0b11110011);  // RD2 (LED), RD3 (Buzzer) là output
   output_low(LED);
   output_low(BUZZER);

   setup_timer_1(T1_INTERNAL | T1_DIV_BY_1);

   while(TRUE) {
      unsigned int16 distance = get_distance_cm();

      if(distance <= 10) {
         output_high(LED);
         output_high(BUZZER);
      } else {
         output_low(LED);
         output_low(BUZZER);
      }

      delay_ms(200);
   }
}

