#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define PIR       PIN_A0
#define LED_XANH  PIN_D2
#define LED_DO    PIN_D3
#define IN1       PIN_C0
#define IN2       PIN_C1

void motor_forward() {
   output_high(IN1);
   output_low(IN2);
}

void motor_reverse() {
   output_low(IN1);
   output_high(IN2);
}

void motor_stop() {
   output_low(IN1);
   output_low(IN2);
}

void main() {
   set_tris_a(0xFF); // PIR là input
   set_tris_c(0x00); // Motor
   set_tris_d(0x00); // LED

   output_low(LED_XANH);
   output_low(LED_DO);
   motor_stop();

   while(TRUE) {
      if(input(PIR)) {
         // Giai do?n m? c?a
         output_high(LED_XANH); // Phát hi?n ngu?i
         output_high(LED_DO);   // Motor ch?y
         motor_forward();
         delay_ms(1000);
         motor_stop();
         output_low(LED_DO);

         // Giai do?n ch? dóng c?a
         delay_ms(1000);

         // Giai do?n dóng c?a
         output_high(LED_DO);
         motor_reverse();

         for(int i = 0; i < 30; i++) { // Quay ngu?c trong t?i da 3s
            delay_ms(100);
            if(input(PIR)) {
               // N?u phát hi?n ngu?i trong khi quay ngu?c
               motor_forward();
               output_high(LED_XANH); // Ðèn xanh sáng l?i
               delay_ms(1000);        // M? l?i 3s
               motor_stop();
               output_low(LED_DO);
               output_low(LED_XANH);
               break; // D?ng vòng l?p dóng c?a
            }
         }

         motor_stop();
         output_low(LED_DO);
         output_low(LED_XANH);
      }
   }
}

