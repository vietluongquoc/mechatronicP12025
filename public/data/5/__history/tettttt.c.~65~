#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define LED_XANH   PIN_D2
#define LIMIT_OPEN PIN_B0

void main() {
   set_tris_b(0xFF);        // RB0 là input
   set_tris_d(0x00);        // LED output
   port_b_pullups(TRUE);    // Kéo lên n?i b?

   output_low(LED_XANH);

   while(TRUE) {
      if(!input(LIMIT_OPEN))  // Nh?n thì LOW
         output_low(LED_XANH);
      else
         output_high(LED_XANH);
   }
}

