#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define LIMIT_OPEN   PIN_B0  // Công t?c m? h?t
#define LIMIT_CLOSE  PIN_B1  // Công t?c dóng h?t
#define LED_XANH     PIN_D2
#define LED_DO       PIN_D3

void main() {
   set_tris_b(0xFF); // RB0, RB1 là input
   set_tris_d(0x00); // RD2, RD3 là output

   output_low(LED_XANH);
   output_low(LED_DO);

   while(TRUE) {
      if(input(LIMIT_OPEN) == 0)  // Nh?n = 0
         output_high(LED_XANH);
      else
         output_low(LED_XANH);

      if(input(LIMIT_CLOSE) == 0)
         output_high(LED_DO);
      else
         output_low(LED_DO);
   }
}

