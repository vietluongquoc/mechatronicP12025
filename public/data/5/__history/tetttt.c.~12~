#include <16F887.h>
#fuses HS, NOWDT, NOLVP, NOPUT
#use delay(clock=12000000)

#define TRIG    PIN_C0
#define ECHO    PIN_C1
#define LED     PIN_D2

// G?i xung trigger 10us d?n HC-SR04
void send_trigger() {
   output_low(TRIG);
   delay_us(2);
   output_high(TRIG);
   delay_us(10);
   output_low(TRIG);
}

// Ðo th?i gian xung ECHO (don v?: us)
unsigned int16 get_echo_time() {
   unsigned int16 t = 0;

   // Ch? ECHO lên m?c cao
   int timeout = 30000;
   while(!input(ECHO) && timeout--); // timeout don gi?n, tránh treo

   // B?t d?u d?m khi ECHO lên
   set_timer1(0);
   while(input(ECHO)) {
      if(get_timer1() > 30000) break; // gi?i h?n do, tránh treo
   }

   t = get_timer1();
   return t; // don v? us
}

// Tính kho?ng cách
unsigned int16 get_distance_cm() {
   unsigned int16 duration = 0;
   float distance_cm = 0;

   send_trigger();
   duration = get_echo_time();

   distance_cm = (float)duration / 58.0;

   return (unsigned int16)distance_cm;
}

void main() {
   set_tris_c(0b00000010);  // RC1 (ECHO) input, RC0 (TRIG) output
   set_tris_d(0b11111011);  // RD2 output
   output_low(LED);

   setup_timer_1(T1_INTERNAL | T1_DIV_BY_1); // 12MHz ? Timer1 tick m?i 1us

   while(TRUE) {
      unsigned int16 distance = get_distance_cm();

      if(distance > 0 && distance <= 10) {
         output_high(LED);
      } else {
         output_low(LED);
      }

      delay_ms(200);
   }
}

