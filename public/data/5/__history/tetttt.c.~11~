#include <16F887.h>
#fuses HS, NOWDT, NOPUT, NOMCLR
#use delay(clock=12000000)   // Th?ch anh ngoài 12MHz

void main() {
   set_tris_d(0b11111011);    // RD2 là output (0), các chân khác là input (1)
   output_low(PIN_D2);        // T?t LED ban d?u

   while(true) {
      output_toggle(PIN_D2);  // Ð?o tr?ng thái LED
      delay_ms(100);          // Nh?p nháy m?i 500ms
   }
}

