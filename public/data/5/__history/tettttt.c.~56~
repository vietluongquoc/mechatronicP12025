#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define PIR           PIN_A0
#define BTN_STOP      PIN_A1
#define BTN_OPEN      PIN_A2
#define BTN_CLOSE     PIN_A3

#define LED_XANH      PIN_D2
#define LED_DO        PIN_D3
#define IN1           PIN_C0
#define IN2           PIN_C1

#define LIMIT_OPEN    PIN_B0
#define LIMIT_CLOSE   PIN_B1

void motor_forward() {
   output_high(IN1);
   output_low(IN2);
}

void motor_reverse() {
   output_low(IN1);
   output_high(IN2);
}

void motor_stop() {
   output_low(IN1);
   output_low(IN2);
}

void wait_until_limit(int1 (*limit_func)()) {
   while(limit_func()) {
      if(input(BTN_STOP) == 0) {
         motor_stop();
         return;
      }
   }
   motor_stop();
}

int1 is_limit_open() {
   return input(LIMIT_OPEN);
}

int1 is_limit_close() {
   return input(LIMIT_CLOSE);
}

void open_door() {
   if(is_limit_open()) {
      output_high(LED_XANH);
      output_high(LED_DO);
      motor_forward();
      wait_until_limit(is_limit_open);
      output_low(LED_DO);
   }
}

void close_door() {
   if(is_limit_close()) {
      output_high(LED_DO);
      motor_reverse();

      int nguoi_phat_hien = 0;

      while(is_limit_close()) {
         if(input(PIR)) {
            nguoi_phat_hien = 1;
            break;
         }
         if(input(BTN_STOP) == 0) {
            motor_stop();
            return;
         }
      }

      motor_stop();
      output_low(LED_DO);

      if(nguoi_phat_hien) {
         open_door();
         close_door();
      }
   }
}

void main() {
   set_tris_a(0xFF); // Nút nh?n và c?m bi?n
   set_tris_b(0xFF); // Công t?c hành trình
   set_tris_c(0x00); // Motor
   set_tris_d(0x00); // LED

   output_low(LED_XANH);
   output_low(LED_DO);
   motor_stop();

   while(TRUE) {
      if(input(BTN_STOP) == 0) {
         motor_stop();
         output_low(LED_XANH);
         output_low(LED_DO);
         delay_ms(300);
         continue;
      }

      if(input(BTN_OPEN) == 0) {
         open_door();
         output_low(LED_XANH);
         delay_ms(300);
         continue;
      }

      if(input(BTN_CLOSE) == 0) {
         close_door();
         output_low(LED_XANH);
         delay_ms(300);
         continue;
      }

      if(input(PIR)) {
         open_door();
         close_door();
         output_low(LED_XANH);
      }
   }
}

