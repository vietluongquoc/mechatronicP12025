#include <16F887.h>
#fuses XT, NOWDT, NOMCLR
#use delay(clock=12000000)

#define LED_XANH PIN_D2
#define LED_DO   PIN_D3

void main() {
   set_tris_d(0x00); // C?u hình PORTD là output
   output_low(LED_XANH);
   output_low(LED_DO);

   while(TRUE) {
      output_high(LED_XANH);
      output_low(LED_DO);
      delay_ms(500);

      output_low(LED_XANH);
      output_high(LED_DO);
      delay_ms(500);
   }
}

